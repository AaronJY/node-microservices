{
    "compilerOptions": {
      "experimentalDecorators": true,
      "outDir": "./dist",
      "sourceMap": true,
      "target": "ES6",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }